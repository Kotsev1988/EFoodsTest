<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EFoods" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="bottomNavigationStyle">@style/MyBottomNavBar</item>
    </style>

    <style name="Theme.EFoods" parent="Base.Theme.EFoods" />


    <style name="RoundedDialogStyle" parent="@style/Theme.Material3.DayNight.Dialog">
        <item name="cornerFamily">rounded</item>
        <item name="dialogCornerRadius">12dp</item>

    </style>

    <style name="preview">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="previewDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/previewDscription</item>
    </style>

    <style name="roundedButtonCorner" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10sp</item>
        <item name="backgroundTint">@color/button_color_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="roundedButtonCornerBuy" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">10sp</item>
        <item name="backgroundTint">@color/button_color_background_buy</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/btn_buy_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/btn_buy_color</item>
        <item name="strokeWidth">@dimen/stroke_size</item>

    </style>

    <style name="roundedButtonCornerDialog" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10sp</item>
        <item name="backgroundTint">@color/button_color_dialog</item>
        <item name="android:textColor">@color/button_color_text_dialog</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>

    </style>



    <style name="dialogRounded" parent="ThemeOverlay.Material3.MaterialAlertDialog">

        <item name="shapeAppearance">@style/ShapeAppearanceDialog</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearanceDialog" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">66dp</item>
    </style>


    <style name="MyButtonStyleMyCard" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10sp</item>
        <item name="backgroundTint">@color/my_card_button_color_background</item>
        <item name="android:textColor">@color/my_card_button_text_color</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>


    </style>


    <style name="roundedButtonCornerMyCard" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10sp</item>

    </style>

    <style name="roundedImageButtonLeft" parent="Widget.AppCompat.ImageButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="backgroundTint">#EFEEEC</item>
    </style>

    <style name="roundedImageButtonRight" parent="Widget.AppCompat.ImageButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="backgroundTint">#EFEEEC</item>

    </style>


</resources>